#For virtualenv projects
export PROJECT_HOME=~/virtualenv_projects/
export EDITOR=vim
export PATH=$PATH:~/android-sdk-linux/tools/:~/android-sdk-linux/platform-tools/:~/.local/bin

if [ -f /opt/local/bin/virtualenv-2.7 ]; then
	export VIRTUALENVWRAPPER_VIRTUALENV=/opt/local/bin/virtualenv-2.7
	export VIRTUALENVWRAPPER_PYTHON=/opt/local/bin/python2.7
	source /opt/local/bin/virtualenvwrapper.sh-2.7
fi
