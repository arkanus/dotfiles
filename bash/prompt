function jobcount {
   jobs | wc -l | tr -d " "
}
 
cur_tty=`tty | sed -e "s/.*tty\(.*\)/\1/"`
 
loadavg=`uptime | sed -e "s/.*load average: \(.*\...\), \(.*\...\), \(.*\...\)/\1/" -e "s/ //g"`

PS1='\[\033[1;44m\]\[\033[1;34m\]  \[\033[1;40m\] [\u@\h:\w]\[\033[0m\]\n\[\033[1;44m\]\[\033[1;34m\]  \[\033[1;40m\] [j:`jobcount`, t:$cur_tty, l:$loadavg]\[\033[0m\]\n\[\033[1;46m\]\[\033[1;36m\]  \[\033[1;40m\] [`date +%D` \t] $> \[\033[0;39m\]\[\033[0m\]'
